{
    "manifest_version": 3,
    "name": "Context Menu Extension",
    "version": "1.0",
    "description": "Get selected text on right-click and show in popup",
    "permissions": [
      "storage",
      "contextMenus",
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "128": "logo.png"
      }
    }
  }
  